<!-- views/partials/register.ejs -->
<main style="border-bottom: 1px solid #ccc">
    <section class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

    <% if (messages.success) { %>
        <div class="flash flash-success text-dull color-medium">
            <span class="checkmark blob"></span>
            <div class="pt-20"></div>
            <br>
            <%= messages.success %>
        </div>
        <h1>You have successfully registered</h1>
    <% } %>
    <hr class="small">
    <div class="flash flash-registration">
        <p class="lead-text"><%= data.firstName %> your Registration ID is <em>#<%= yourId %></em></p>
    </div>
    <div class="pt-50"></div>
    <a href="#" class="btn btn-lg btn-secondary">Download the full Project Brief</a>
                </div>
            </div>
        </div>
    </section>
    
    <% include ./partials/sections/affiliate %>
    <% include ./partials/sections/schedule %>

    <section id="cta" class="color-bg text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="color-white">Best of luck for the Challenge?</h2>
                </div>
            </div>
        </div>
    </section>
</main>